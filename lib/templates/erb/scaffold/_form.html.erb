<%%= error_messages_for @<%= singular_table_name %> %>
<%%= form_for(@<%=singular_table_name%>, :html => {:class => "form-horizontal"} ) do |f| %>
    <fieldset>
      <% attributes.each do |attribute| -%>
          <div class="control-group">
                <%%= f.label ta(<%=singular_table_name.capitalize %>, :<%= attribute.name %>), :class => "control-label" %>
                <div class="controls">
                  <%%= f.<%= attribute.field_type %> :<%= attribute.name %>, :class => "input-xlarge", :placeholder => ta(<%=singular_table_name.capitalize %>, :<%= attribute.name %>) %>
                </div>
          </div>
      <% end -%>
      <div class="form-actions">
        <%%= f.submit :class => 'btn btn-success btn-large' %> <%%= link_to 'Cancelar', "javascript:void(0)",:onclick =>"javascript:history.go(-1);", :class => "btn" %>
      </div>
    </fieldset>
<%% end %>