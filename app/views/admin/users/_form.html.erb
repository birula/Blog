<%= error_messages_for @user %>
<%= form_for(@user, :html => {:class => "form-horizontal"} ) do |f| %>
    <fieldset>
                <div class="control-group">
                <%= f.label ta(User, :name), :class => "control-label" %>
                <div class="controls">
                  <%= f.text_field :name, :class => "input-xlarge", :placeholder => ta(User, :name) %>
                </div>
          </div>
            <div class="form-actions">
        <%= f.submit :class => 'btn btn-success btn-large' %> <%= link_to 'Cancelar', "javascript:void(0)",:onclick =>"javascript:history.go(-1);", :class => "btn" %>
      </div>
    </fieldset>
<% end %>