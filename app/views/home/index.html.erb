<% if @posts.present? %>
    <table class="table table-striped table-bordered table-condensed">
      <thead>
      <tr>
                <th><%= ta( Post, :title) %></th>
                <th><%= ta( Post, :body) %></th>
                <th><%= ta( Post, :user) %></th>
                <th>Opção</th>
      </tr>
      </thead>
      <tbody>
      <% @posts.each do |post| %>
          <tr class="list-roles">
                        <td><%= post.title %></td>
                        <td><%= post.body %></td>
                        <td><%= post.user.name %></td>
                        <td>
              <%= link_to admin_post_path(post), :class=>"btn btn-mini" do %><i class="icon-file"></i> Visualizar<% end %>
              <%= link_to edit_admin_post_path(post), :class=>"btn btn-mini" do %><i class="icon-pencil"></i> Alterar<% end %>
              <%= link_to admin_post_path(post), method: :delete, data: { confirm: 'Deseja realmente excluir essa Post?' }, :class=>"btn btn-mini" do %><i class="icon-trash"></i> Excluir<% end %>
            </td>
          </tr>
      <% end %>

      </tbody>
    </table>
<% else %>
    <strong><%= ta(Post, 'not_found') %></strong>
<% end %>
