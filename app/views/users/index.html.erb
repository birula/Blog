<div class="page-header">
  <h1>User <small>Lista de users</small>&nbsp;&nbsp;&nbsp;<%= link_to_new User, new_user_path %></h1>
</div>

<% if @users.present? %>
    <table class="table table-striped table-bordered table-condensed">
      <thead>
      <tr>
                <th><%= ta(User, :name) %></th>
                <th>Opção</th>
      </tr>
      </thead>
      <tbody>
      <% @users.each do |user| %>
          <tr class="list-roles">
                        <td><%= user.name %></td>
                        <td>
              <%= link_to user, :class=>"btn btn-mini" do %><i class="icon-file"></i> Visualizar<% end %>
              <%= link_to edit_user_path(user), :class=>"btn btn-mini" do %><i class="icon-pencil"></i> Alterar<% end %>
              <%= link_to user, method: :delete, data: { confirm: 'Deseja realmente excluir essa User?' }, :class=>"btn btn-mini" do %><i class="icon-trash"></i> Excluir<% end %>

              <%= link_to_edit  [:edit, user]%>
              <%= link_to_destroy  [user]%>
            </td>
          </tr>
      <% end %>
      <tr><td colspan="3"><%= will_paginate @users %></td></tr>
      </tbody>
    </table>
<% else %>
    <strong><%= ta(User, 'not_found') %></strong>
<% end %>